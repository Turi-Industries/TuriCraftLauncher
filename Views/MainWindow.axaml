    <Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TuriCraftLauncher.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
        Width="800" Height="500"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        x:Class="TuriCraftLauncher.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Turi Craft Launcher">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto,Auto,*" Margin="40">
        
        <!-- Titre -->
        <TextBlock Grid.Row="1" Text="Turi Craft" 
                   FontSize="40" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,60"
                   Foreground="{DynamicResource SystemAccentColor}"/>

        <!-- Status & Progress -->
        <StackPanel Grid.Row="2" Spacing="20" MaxWidth="300">
            
            <Button Command="{Binding PlayCommand}" 
                    Content="JOUER" 
                    HorizontalAlignment="Stretch" 
                    HorizontalContentAlignment="Center"
                    Padding="15"
                    FontSize="18"
                    FontWeight="Bold"
                    IsEnabled="{Binding !IsBusy}"/>

            <ProgressBar Value="{Binding ProgressValue}" 
                         IsIndeterminate="{Binding IsIndeterminate}"
                         Height="4"
                         IsVisible="{Binding IsBusy}"/>
                         
            <TextBlock Text="{Binding StatusText}" 
                       HorizontalAlignment="Center" 
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Foreground="Gray" FontSize="12"/>
        </StackPanel>

    </Grid>
</Window>
